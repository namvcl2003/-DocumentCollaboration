{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=DocumentCollaborationDB;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true",
    "DefaultConnectionSqlAuth": "Server=localhost;Database=DocumentCollaborationDB;User Id=sa;Password=Password.1;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "Secret": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForHS256",
    "Issuer": "DocumentCollaboration",
    "Audience": "DocumentCollaborationUsers",
    "ExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "FileStorage": {
    "BasePath": "D:/DocumentStorage",
    "MaxFileSizeMB": 50,
    "AllowedExtensions": [
      ".docx",
      ".xlsx",
      ".pptx",
      ".doc",
      ".xls",
      ".ppt",
      ".pdf"
    ]
  },
  "Collabora": {
    "ServerUrl": "http://localhost:9980",
    "WopiHostUrl": "http://localhost:5000",
    "SecretKey": "YourCollaboraSecretKey"
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@company.com",
    "SmtpPassword": "your-password",
    "FromEmail": "noreply@company.com",
    "FromName": "Document Collaboration System",
    "EnableSsl": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CorsOrigins": [
    "http://localhost:3000",
    "http://localhost:3001",
    "http://localhost:5173"
  ]
}